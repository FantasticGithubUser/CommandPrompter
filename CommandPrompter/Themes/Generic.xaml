<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CommandPrompter.Resources.Controls">


    <Style TargetType="{x:Type local:SearchBar}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SearchBar}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0" FontFamily="{TemplateBinding FontFamily}">
                            <Run Text="&#xf002;"></Run>
                        </TextBlock>
                        <Border BorderBrush="White" BorderThickness="0.8" CornerRadius="12">
                            <TextBox Text="{Binding Path=MyText,RelativeSource={RelativeSource AncestorType=local:SearchBar}, UpdateSourceTrigger=PropertyChanged}" Name="BarTextBox" MinWidth="{TemplateBinding MinWidth}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                
                            </TextBox>
                        </Border>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
