<UserControl x:Class="CommandPrompter.Resources.Controls.SideMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommandPrompter.Resources.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Visible" Background="Transparent">
            <ItemsControl ItemsSource="{Binding SideMenuItems,Mode=TwoWay}" FontFamily="{StaticResource FontAwesome}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:SideMenuItem/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
