<UserControl x:Class="CommandPrompter.Resources.Controls.SideMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommandPrompter.Resources.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="250">
    <Grid Margin="20,6,6,20">
    <Button Style="{StaticResource SideMenuButton}" Command="{Binding switchPageCommand}">
            <StackPanel Orientation="Horizontal">
            <TextBlock Margin="0,0,10,0">
                <Run FontFamily="{StaticResource FontAwesome}" Text="{Binding Icon}"></Run>
            </TextBlock>
            <TextBlock>
                    
                    <Run Text="{Binding ItemName}"></Run>
            </TextBlock>
        </StackPanel>
        </Button>
    </Grid>
</UserControl>
