<UserControl x:Class="CommandPrompter.Resources.Controls.Popup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommandPrompter.Resources.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType=Page}}" Height="{Binding Path=ActualHeight, RelativeSource={RelativeSource AncestorType=Page}}">
    <Border Background="Wheat" CornerRadius="5" Padding="5" Width="100" Height="100">
        <StackPanel>
            <ContentPresenter Content="{TemplateBinding ContentControl.Content}"/>
        </StackPanel>
    </Border>
</UserControl>
