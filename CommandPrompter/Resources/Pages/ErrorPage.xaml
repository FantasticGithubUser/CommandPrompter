<Page x:Class="CommandPrompter.Resources.Pages.ErrorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommandPrompter.Resources.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ErrorPage" Style="{StaticResource BasePageStyle}">

    <Grid>
        <Border Background="Black" BorderBrush="#d46c55">
            <Grid>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock>
                        <Run Foreground="{StaticResource DarkRedSolidBrush}">O</Run>
                        <Run Foreground="{StaticResource DarkYellowSolidBrush}">o</Run>
                        <Run Foreground="{StaticResource DarkGreenSolidBrush}">p</Run>
                        <Run Foreground="{StaticResource NormalGraySolidBrush}">s</Run>
                        <Run> Inner Error Occured!</Run>
                    </TextBlock>
                    <Button>Back To Site</Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
