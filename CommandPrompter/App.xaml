<Application x:Class="CommandPrompter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CommandPrompter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ResourceDictionaries/GlobalVariables.xaml"/>
                <ResourceDictionary Source="Resources/ResourceDictionaries/Colors.xaml"/>
                <ResourceDictionary Source="Resources/ResourceDictionaries/Buttons.xaml"/>
                <ResourceDictionary Source="Resources/ResourceDictionaries/TextIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
